{
  "name": "@uicu/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production tsc && node dist/bin/www",
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node' ./src/bin/www",
    "build": "npm run clean && npm run tslint && tsc && npm run cp",
    "prd": "npm run build && pm2 start pm2.config.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "clean": "rimraf ./dist && mkdir dist",
    "test": "cross-env NODE_ENV=development node test/index.js",
    "cp": "node script/index.js"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "debug": "^4.1.1",
    "ejs": "^3.1.7",
    "glob": "^8.0.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-body": "^4.2.0",
    "koa-json": "^2.0.2",
    "koa-json-error": "^3.1.2",
    "koa-logger": "^3.2.0",
    "koa-parameter": "^3.0.1",
    "koa-redis": "^4.0.1",
    "koa-router": "^7.4.0",
    "koa-sslify": "^5.0.0",
    "koa-static": "^5.0.0",
    "koa-views": "^8.0.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.21",
    "mongoose": "^6.3.1",
    "nodemailer": "^6.7.3",
    "string-random": "^0.1.3",
    "svg-captcha": "^1.4.0",
    "ua-parser-js": "^1.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/debug": "^4.1.7",
    "@types/ejs": "^3.1.0",
    "@types/glob": "^7.2.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "^2.13.4",
    "@types/koa-json": "^2.0.20",
    "@types/koa-json-error": "^3.1.4",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-redis": "^4.0.2",
    "@types/koa-router": "^7.4.4",
    "@types/koa-sslify": "^4.0.3",
    "@types/koa-static": "^4.0.2",
    "@types/koa2-cors": "^2.0.2",
    "@types/lodash": "^4.14.182",
    "@types/nodemailer": "^6.4.4",
    "@types/ua-parser-js": "^0.7.36",
    "cross-env": "^7.0.3",
    "nodemon": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.3",
    "typescript": "^4.6.3"
  }
}
